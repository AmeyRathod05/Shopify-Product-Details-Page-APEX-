{%- style -%}
  .shopify-section-group-header-group {
    z-index: 4;
    position: sticky;
    top: 0;
}
  .custom-header {
    padding: 10px 0;
    background: {{ section.settings.bg_color | default: '#ffffff' }};
    position: relative;
    z-index: 100;
  }
  
  .mobile-toggle {
    display: none;
    background: none;
    border: none;
    padding: 5px;
    cursor: pointer;
    margin-right: 15px;
    color: #000;
  }
  
  .mobile-sidebar {
    position: fixed;
    top: 0;
    left: -100%;
    width: 85%;
    max-width: 350px;
    height: 100vh;
    background: #fff;
    z-index: 1000;
    transition: left 0.3s ease-in-out;
    overflow-y: auto;
    box-shadow: 2px 0 10px rgba(0,0,0,0.1);
  }
  
  .mobile-sidebar.active {
    left: 0;
  }
  
  .mobile-sidebar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .mobile-sidebar-logo {
    max-width: 100px;
  }
  
  .mobile-sidebar-close {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    line-height: 1;
  }
  
  .mobile-sidebar-content {
    padding: 20px 15px;
  }
  
  .mobile-sidebar-logo img {
    max-width: 80px;
    height: auto;
}
  .mobile-sidebar .custom-header-link {
    display: block;
    padding: 5px 0;
    color: #333;
    text-decoration: none;
    font-size: 15px;
    border-bottom: 1px solid #f5f5f5;
  }
  
  .mobile-sidebar .menu-tab-links {
    display: block;
  }
  
  .mobile-sidebar .menu-tab-link {
    display: block;
    padding: 5px 0;
    color: #555;
    text-decoration: none;
    font-size: 14px;
    border-bottom: 1px solid #f5f5f5;
  }

  .menu-tab {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background: #00000080;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease-in-out;
    z-index: 99;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }
  
  .menu-tab.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  .menu-tab-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .menu-tab-links {
    display: flex;
    justify-content: center;
    gap: 30px;
    flex-wrap: wrap;
  }
  
  .menu-tab-link {
    color: #fff;
    text-decoration: none;
    font-size: 13px;
    text-transform: capitalize;
    letter-spacing: 0.5px;
    position: relative;
    transition: color 0.2s ease;
    padding: 10px 0;
  }
  
  .menu-tab-link:after {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: 0;
    left: 0;
    background-color: #fff;
    transition: width 0.3s ease;
  }
  
  .menu-tab-link:hover:after {
    width: 100%;
  }
  
  .custom-header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .custom-header-logo {
    max-width: 80px;
  }
  
  .custom-header-logo img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .custom-header-nav {
    display: flex;
    gap: 15px;
    align-items: center;
  }
  
 .custom-header-nav .custom-header-link {
    color: {{ section.settings.link_color }};
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    text-transform:capitalize;
    letter-spacing: 0.5px;
    display: flex;
    align-items: center;
    gap: 5px;
    transition: color 0.2s ease;
  }
  
  .custom-header-search {
    position: relative;

  }
    
  .custom-header-search input {
    padding: 2px 0 2px 4px;
    border: 1px solid #e1e1e1;
    background-color: #000;
    border-radius:0;
    font-size: 14px;
    width: 200px;
    outline: none;
    transition: border-color 0.2s ease;
  }

 
  .custom-header-icons {
    display: flex;
    gap:5px;
    align-items: center;
  }
  
  .custom-header-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }
  
  .custom-header-icon svg {
    width: 20px;
    height: 20px;
    stroke: {{ section.settings.link_color }};
    transition: stroke 0.2s ease;
  }
  
  
  
  
  /* Responsive Styles */
  @media (max-width: 768px) {
    .custom-header {
      background: #ffffff !important;
    }
    
    .mobile-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 5px;
      color: #000 !important;
    }
    
    .custom-header-icon {
      color: #000 !important;
    }
    
    .custom-header-icon svg {
      stroke: #000 !important;
    }
    
    .custom-header-icons a {
      color: #000 !important;
    }
    
    .custom-header-icons svg {
      stroke: #000 !important;
    }
    
    .mobile-toggle svg path {
      fill: #000 !important;
    }
    
    .custom-header-container {
      display: flex;
      align-items: center;
    }
    
    .custom-header-nav {
      flex: 1;
      display: flex;
      justify-content: flex-end;
    }
    
    .custom-header-nav > a:not(.custom-header-icon) {
      display: none;
    }
    
    .custom-header-search {
      display: none;
    }
    
    .menu-tab {
      display: none;
    }
    
    .custom-header-logo {
      margin-left: 10px;
    }
    
    .desktop-logo {
      display: none !important;
    }
    
    .mobile-logo {
      display: inline-block !important;
      max-height: 30px;
      width: auto;
    }
    
    .custom-header-logo-link {
      display: flex;
      align-items: center;
    }
  }
  
{%- endstyle -%}

